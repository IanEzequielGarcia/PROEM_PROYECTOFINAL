@model PROEM_PROYECTOFINALMVC.Models.Pagos
@using PROEM_PROYECTOFINALMVC.Models;
@{
    ViewData["Title"] = "Create";
    IEnumerable<Cliente> clientes = ViewData["Clientes"] as IEnumerable<Cliente>;
}

<h1>Create</h1>

<h4>Pagos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" class="form-control" />
            </div>
            <label>Cliente</label>
            <select id="ClienteId" name="ClienteId">
                @foreach(Cliente cliente in clientes)
                {
                    <option value="@cliente.Codigo">@cliente.Nombre</option>
                }
            </select>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
